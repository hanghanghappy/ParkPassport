<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>
<div class="container">

<h1>All National Parks</h1>

<% for (let nationalpark of nationalparks){%>
 <div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <% if (nationalpark.images.length > 0 && nationalpark.images[0].url) { %>
              <img class="img-fluid" alt="" src="<%=nationalpark.images[0].url%>">
            <% } else { %>
              <img class="img-fluid" alt="" src="none.jpg">
            <% } %>
          </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= nationalpark.title %> </h5>
                <p class="card-text"><%= nationalpark.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= nationalpark.location%></small>
                </p>
                <a class="btn btn-primary" href="/nationalparks/<%=nationalpark._id%>">View <%=nationalpark.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const nationalparks = { features: <%- JSON.stringify(nationalparks) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>